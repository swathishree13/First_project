#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int main() {
    int user, computer;

    printf("ğŸ® Rock Paper Scissors Game ğŸ®\n");
    printf("Choose:\n");
    printf("1. Rock\n2. Paper\n3. Scissors\n");
    printf("Enter your choice (1-3): ");
    scanf("%d", &user);

    // Generate random choice for computer
    srand(time(0));
    computer = (rand() % 3) + 1;

    printf("\nYou chose: ");
    if (user == 1) printf("Rock");
    else if (user == 2) printf("Paper");
    else if (user == 3) printf("Scissors");
    else {
        printf("Invalid choice!");
        return 0;
    }

    printf("\nComputer chose: ");
    if (computer == 1) printf("Rock");
    else if (computer == 2) printf("Paper");
    else printf("Scissors");

    // Game logic
    if (user == computer)
        printf("\n\nğŸ¤ It's a Draw!");
    else if ((user == 1 && computer == 3) ||
             (user == 2 && computer == 1) ||
             (user == 3 && computer == 2))
        printf("\n\nğŸ‰ You Win!");
    else
        printf("\n\nğŸ˜¢ Computer Wins!");

    return 0;
}
